{
  "env": {
    "es2021": true,
    "mocha": true,
    "node": true
  },
  "globals": {
    "NodeJS": true
  },
  "extends": [
    "standard"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "import/newline-after-import": ["error", { "count": 3 }],
    "no-multiple-empty-lines": [
      "error",
      { "max": 3, "maxEOF": 1, "maxBOF": 0 }
    ]
  }
}
